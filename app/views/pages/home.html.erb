<h1>Screw Your Banker</h1>

<div>
  <%= form_tag("/", method: "get", role: "form", class: "user_input") do %>
    <div class="form-group">
      <%= label_tag :present_value, "Current Investment Value" %>
      <%= number_field_tag :present_value, nil, class: "form-control", required: true %><br>
    </div>

    <div class="form-group">
      <%= label_tag :pmt, "How much do you contribute each month?" %>
      <%= number_field_tag  :pmt, nil, class: "form-control", id: "contributions", required: true %><br>
    </div>

    <div class="form-group">
      <%= label_tag :age, "How Old Are You?" %>
      <%= number_field_tag :age, nil, class: "form-control", id: "age", required: true %><br>
    </div>

    <div class="form-group">
      <%= label_tag :expense_ratio, "What is the expense ratio for your portfolio?" %>
      <%= text_field_tag :expense_ratio, nil, class: "form-control"  %><br>
    </div>

    <%= submit_tag "What are you buying your broker?", id: "submit", class: "btn btn-primary btn-lg btn-block" %>
  <% end %>
</div>
